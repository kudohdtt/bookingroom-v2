<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@drawable/shadow_13520"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <RelativeLayout
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginStart="10dp"
     android:layout_marginEnd="5dp"
     android:id="@+id/tieude_ks"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center"
     >

     <TextView
         android:id="@+id/name_hotel"
         android:layout_width="wrap_content"
         android:layout_height="35dp"
         android:layout_centerVertical="true"
         android:layout_alignParentStart="true"
         android:text="ABCD"
         android:textSize="25dp" />

    <RatingBar
        android:id="@+id/rate_hotel"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="2.5"
        style="?android:attr/ratingBarStyleIndicator"
        android:progressTint="#F1DB1E"
        />
 </RelativeLayout>
    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="3dp"
        android:id="@+id/line_1"
        app:layout_constraintTop_toBottomOf="@id/tieude_ks"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="20dp"/>
<RelativeLayout
    android:id="@+id/image_hotel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/line_1"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView_1"
        android:layout_width="254dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/royallhotel"
        android:scaleType="fitXY"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView_2"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView_1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_toStartOf="@+id/imageView_1"
        android:src="@drawable/phongcaocap"
        android:scaleType="fitXY"

      />

    <ImageView
        android:id="@+id/imageView_3"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_toEndOf="@+id/imageView_1"
        android:layout_below="@+id/imageView_2"
        android:src="@drawable/phongvip"
        android:scaleType="fitXY"/>
</RelativeLayout>

    <ImageView
        android:id="@+id/location_hotel"
        android:layout_width="70dp"
        android:layout_height="74dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_hotel"
        app:srcCompat="@drawable/ic_vitri_foreground" />
    <TextView
        android:id="@+id/text_location_hotel"
        app:layout_constraintTop_toBottomOf="@+id/image_hotel"
        app:layout_constraintLeft_toRightOf="@+id/location_hotel"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Dia diem a"/>
    <TextView
        android:id="@+id/gt_hotel"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/location_hotel"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Gioi thieu khach san rat là đẹp mong cac bạn xem hộ mình cái đi nhá ."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/ttkm_hotel"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/gt_hotel"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Thong tin khuyen mai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"/>

    <TextView

        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="200 $"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttkm_hotel"
        android:typeface="monospace"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:background="@drawable/shadow_textview"
        />


</android.support.constraint.ConstraintLayout>